generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  phoneNumber String
  address     String
  createAt    DateTime @default(now())
  plate       Plate[]
}

model Plate {
  id       Int      @id @default(autoincrement())
  mac      String   @unique
  createAt DateTime @default(now())
  User     User?    @relation(fields: [userId], references: [id])
  userId   Int?
}

model Weigh {
  id       Int      @id @default(autoincrement())
  mac      String
  value    Decimal  @db.Decimal(5, 2)
  createAt DateTime @default(now())
}
